{
  "appenders": {
    "access": {
      "type": "dateFile",
      "filename": "log/access.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "app": {
      "type": "file",
      "filename": "log/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errorFile": {
      "type": "file",
      "filename": "log/errors.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "pattern": "-yyyy-MM-dd"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    },
    "debugFile": {
      "type": "file",
      "filename": "log/debugs.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "pattern": "-yyyy-MM-dd"
    },
    "debugs": {
      "type": "logLevelFilter",
      "level": "DEBUG",
      "appender": "debugFile"
    },
    "out": {
      "type": "stdout",
      "pattern": "-yyyy-MM-dd"
    }
  },
  "categories": {
    "default": { "appenders": [ "app", "errors", "debugs", "out" ], "level": "DEBUG" },
    "http": { "appenders": [ "access"], "level": "DEBUG" }
  }
}